{    
    "version": 2,
    "customTemplates": [
        {
            "name": "blank",
            "title": "Blank",
            "postTypes": [
                "page"
            ]
        },
        {
            "name": "page-no-title",
            "title": "Page without title",
            "postTypes": [
                "page"
            ]
        }
    ],
    "settings": {
        "appearanceTools": true,
        "color": {
            "palette": [
                {
                    "name": "color-1",
                    "slug": "color-1",
                    "color": "#005cc5"
                },
                {
                    "name": "color-2",
                    "slug": "color-2",
                    "color": "#F2F0EC"
                },
                {
                    "name": "color-3",
                    "slug": "color-3",
                    "color": "#135e96"
                },
                {
                    "name": "color-4",
                    "slug": "color-4",
                    "color": "#ae1313"
                },
                {
                    "name": "color-5",
                    "slug": "color-5",
                    "color": "#ffffff"
                },
                {
                    "name": "color-6",
                    "slug": "color-6",
                    "color": "#000000"
                }
            ]
        },
        "layout": {
			"contentSize": "1200px",
			"wideSize": "1200px"
		},
        "typography": {
            "dropCap": false,
            "fontFamilies": [
                {
                    "fontFamily": "\"Open Sans\", sans-serif",
                    "name": "Open Sans",
                    "slug": "open-sans"
                },
                {
                    "fontFamily": "Raleway, sans-serif",
                    "name": "Raleway",
                    "slug": "raleway"
                },
                {
                    "fontFamily": "Montserrat, sans-serif",
                    "name": "Montserrat",
                    "slug": "montserrat"
                }
            ],
            "fontSizes": [
                {   
                    "name": "Small",
                    "size": "14px",
                    "slug": "small"
                },
                {   
                    "name": "Regular",
                    "size": "16px",
                    "slug": "regular"
                },
                {
                    "name": "Medium",
                    "size": "20px",
                    "slug": "medium"
                },
                {
                    "name": "Large",
                    "size": "24px",
                    "slug": "large"
                },
                {   
                    "name": "X-Large",
                    "size": "36px",
                    "slug": "x-large"
                }
            ]
        },
        "spacing": {
            "units": [
                "px",
                "rem",
                "vh",
                "vw",
                "%"
            ]
        },
        "custom": {
            "lineHeight": {
                "body": 1.625,
                "heading": 1.1
            },
            "color": {
                "ico--phone": "#00ff0c",
                "ico--mail": "#00baff"
            },
            "typography": {
                "font-size": {
                    "heading-1": "64px",
                    "heading-2": "44px",
                    "heading-3": "30px",
                    "heading-4": "24px",
                    "heading-5": "20px",
                    "heading-6": "16px"                    
                }
            }
        }       
    },
    "styles": {
        "blocks": {
            "core/site-title": {
                "elements": {
                    "link": {
                        "typography": {
                            "textDecoration": "none"
                        }
                    }
                }
            },
            "core/template-part": {
                "spacing": {
                    "margin": {
                        "top": "0"
                    }
                }
            },
            "core/post-content": {
                "spacing": {
                    "margin": {
                        "top": "0"
                    }
                }
            },
            "core/group": {
                "spacing": {
                    "margin": {
                        "top": "0"
                    }
                }
            }
            
        },
        "typography": {
            "fontFamily": "var(--wp--preset--font-family--open-sans)",
            "lineHeight": "var(--wp--custom--line-height--body)",
            "fontSize": "var(--wp--preset--font-size--normal)"
        },
        "elements": {
            "h1": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--raleway)",
                    "lineHeight": "var(--wp--custom--line-height--heading)",
                    "fontSize": "var(--wp--custom--typography--font-size--heading-1)"
                }
            },
            "h2": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--raleway)",
                    "lineHeight": "var(--wp--custom--line-height--heading)",
                    "fontSize": "var(--wp--custom--typography--font-size--heading-2)"
                }
            },
            "h3": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--raleway)",
                    "lineHeight": "var(--wp--custom--line-height--heading)",
                    "fontSize": "var(--wp--custom--typography--font-size--heading-3)"
                }
            },
            "h4": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--raleway)",
                    "lineHeight": "var(--wp--custom--line-height--heading)",
                    "fontSize": "var(--wp--custom--typography--font-size--heading-4)"
                }
            },
            "h5": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--raleway)",
                    "lineHeight": "var(--wp--custom--line-height--heading)",
                    "fontSize": "var(--wp--custom--typography--font-size--heading-5)"
                }
            },
            "h6": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--raleway)",
                    "lineHeight": "var(--wp--custom--line-height--heading)",
                    "fontSize": "var(--wp--custom--typography--font-size--heading-6)"
                }
            }
        }
    },
    "templateParts": [
        {
            "name": "header",
            "title": "Header",
            "area": "header"
        },
        {
            "name": "header-centered-logo",
            "title": "Header With Centered Logo",
            "area": "header"
        },
        {
            "name": "mobile-header",
            "title": "Mobile Header",
            "area": "header"
        },
        {
            "name": "before-footer",
            "title": "Before Footer",
            "area": "footer"
        },    
        {
            "name": "footer",
            "title": "Footer",
            "area": "footer"
        }
    ]
}