{    
    "version": 2,
    "customTemplates": [
        {
            "name": "blank",
            "title": "Blank",
            "postTypes": [
                "page"
            ]
        },
        {
            "name": "page-no-title",
            "title": "Page without title",
            "postTypes": [
                "page"
            ]
        }
    ],
    "settings": {
        "appearanceTools": true,
        "color": {
            "palette": [
                {
                    "name": "color-1",
                    "slug": "color-1",
                    "color": "#005cc5"
                },
                {
                    "name": "color-2",
                    "slug": "color-2",
                    "color": "#dddddd"
                },
                {
                    "name": "color-3",
                    "slug": "color-3",
                    "color": "#135e96"
                },
                {
                    "name": "color-4",
                    "slug": "color-4",
                    "color": "#ae1313"
                },
                {
                    "name": "color-5",
                    "slug": "color-5",
                    "color": "#ffffff"
                },
                {
                    "name": "color-6",
                    "slug": "color-6",
                    "color": "#000000"
                }
            ]
        },
        "layout": {
			"contentSize": "1200px",
			"wideSize": "100%"
		},
        "typography": {
            "dropCap": false,
            "fontFamilies": [
                {
                    "fontFamily": "\"Open Sans\", sans-serif",
                    "name": "Open Sans",
                    "slug": "open-sans"
                },
                {
                    "fontFamily": "Raleway, sans-serif",
                    "name": "Raleway",
                    "slug": "raleway"
                },
                {
                    "fontFamily": "Montserrat, sans-serif",
                    "name": "Montserrat",
                    "slug": "montserrat"
                }
            ],
            "fontSizes": [
                {
                    "size": "14px",
                    "slug": "small"
                },
                {
                    "size": "16px",
                    "slug": "normal"
                },
                {
                    "size": "20px",
                    "slug": "medium"
                },
                {
                    "size": "24px",
                    "slug": "large"
                },
                {
                    "size": "36px",
                    "slug": "x-large"
                }
            ]
        },
        "spacing": {
            "units": [
                "px",
                "rem",
                "vh",
                "vw",
                "%"
            ]
        },
        "custom": {
            "lineHeight": {
                "body": 1.625,
                "heading": 1.1
            },
            "color": {
                "ico--phone": "#00ff0c",
                "ico--mail": "#00baff"
            }
        }       
    },
    "styles": {
        "typography": {
            "fontFamily": "var(--wp--preset--font-family--open-sans)",
            "lineHeight": "var(--wp--custom--line-height--body)",
            "fontSize": "var(--wp--preset--font-size--normal)"
        },
        "elements": {
            "h1": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--raleway)",
                    "lineHeight": "var(--wp--custom--line-height--heading)"                    
                }
            },
            "h2": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--raleway)",
                    "lineHeight": "var(--wp--custom--line-height--heading)"
                }
            },
            "h3": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--raleway)",
                    "lineHeight": "var(--wp--custom--line-height--heading)"
                }
            },
            "h4": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--raleway)",
                    "lineHeight": "var(--wp--custom--line-height--heading)"
                }
            },
            "h5": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--raleway)",
                    "lineHeight": "var(--wp--custom--line-height--heading)"
                }
            },
            "h6": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--raleway)",
                    "lineHeight": "var(--wp--custom--line-height--heading)"
                }
            }
        }
    },
    "templateParts": [
        {
            "name": "header",
            "title": "Header",
            "area": "header"
        },
        {
            "name": "header-centered-logo",
            "title": "Header With Centered Logo",
            "area": "header"
        },
        {
            "name": "mobile-header",
            "title": "Mobile Header",
            "area": "header"
        },
        {
            "name": "before-footer",
            "title": "Before Footer",
            "area": "footer"
        },    
        {
            "name": "footer",
            "title": "Footer",
            "area": "footer"
        }
    ]
}